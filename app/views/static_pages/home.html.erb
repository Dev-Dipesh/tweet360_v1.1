<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
 <%= link_to image_tag("tweet360 logo.png", align: "left", width: "400", height: "430", alt: "Tweet360 logo"), 'https://github.com/Dev-Dipesh/tweet360' %>
